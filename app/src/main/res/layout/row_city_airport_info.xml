<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView_cityAirportCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BTR"
            android:textColor="#000000"
            android:textSize="30sp"
            android:paddingEnd="8dp"/>
        <TextView
            android:id="@+id/textView_cityAirportName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Baton Rouge Metropolitan Ryan Field"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView_cityAirportDestinationCountLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Destinations: "
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/textView_cityAirportDestinationCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="4"
            android:textColor="#000000"/>
    </LinearLayout>



</LinearLayout>